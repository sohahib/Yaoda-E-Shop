@*@model IEnumerable<Shoes> *@
@model List<Shoes>
@{ 
    ViewData["Title"] = "List of Products";
}
<div class="row">
    @foreach (var item in Model)
            {
                <div class="col-md-4 col-xs-6 border-primary mb-3">
                    <div class="card mb-3" style="max-width:540px">
                        <div class="row g-0">
                            <div class=" col-md-12">
                                <div class="card-header text-white bg-info">
                                    <p class="card-text">
                                        <h4 class="card-title">
                                            @item.ProductName 
                                            <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                        </h4>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <img src="@item.ProductImageUrl" width="100%" alt="">
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <p class="card-text"> <b >Price:  </b> @item.ProductPrice.ToString("c") </p>
                                    <p class="card-text"> <b>Quantity:</b>
                                    @if (item.ProductQuantity <= 10) { 
                                    <span> @item.ProductQuantity left, order soon!</span>}
                                    else { <span> @item.ProductQuantity</span>}
                                    </p>
                                </div>
                            </div>
                            <div class="col-md12">
                                <div class="card-footer">
                                    <p class="card-text">
                                        <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i>See More</a>
                                        <a class="btn btn-success text-white float-left"><i class="bi bi-cart-plus"></i>Add to cart (@item.ProductPrice.ToString("c"))</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
</div>